{
	"name": "Musicbox",
	"version": "1.0.0",
	"description": "A music library organizer and player.",
	"author": {
		"name": "Jenny Belanger",
		"email": "mail@jennybelanger.com",
		"url": "https://www.jennybelanger.com/"
	},
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/jlbelanger/musicbox.git"
	},
	"main": "public/electron.js",
	"homepage": "./",
	"build": {
		"appId": "com.jennybelanger.musicbox",
		"mac": {
			"category": "public.app-category.music"
		}
	},
	"scripts": {
		"start": "concurrently \"BROWSER=none yarn start:react\" \"wait-on http://localhost:3000 && electron .\"",
		"start:react": "react-scripts start",
		"build": "react-scripts build",
		"dist": "electron-builder",
		"lint": "yarn lint:css && yarn lint:js",
		"lint:css": "node_modules/.bin/stylelint 'src/scss/**/*.scss'",
		"lint:js": "node_modules/.bin/eslint src/js/* --ext .js",
		"predist": "yarn build",
		"test": "node_modules/.bin/jest --watch",
		"test:cypress": "yarn cypress open"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.11.6",
		"@testing-library/react": "^11.2.2",
		"@testing-library/user-event": "^12.6.0",
		"concurrently": "^5.3.0",
		"cypress": "^6.1.0",
		"electron": "^11.1.0",
		"electron-builder": "^22.9.1",
		"eslint": "^7.16.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.21.5",
		"sass-lint": "^1.13.1",
		"stylelint": "^13.8.0",
		"stylelint-config-standard-scss": "^1.1.0",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.18.0",
		"wait-on": "^5.2.0"
	},
	"dependencies": {
		"@babel/plugin-transform-runtime": "^7.12.0",
		"@babel/preset-env": "^7.12.11",
		"@reduxjs/toolkit": "^1.5.0",
		"@svgr/webpack": "^5.5.0",
		"dateformat": "^4.3.1",
		"electron-is-dev": "^1.2.0",
		"md5": "^2.3.0",
		"moment": "^2.29.1",
		"moment-timezone": "^0.5.32",
		"music-metadata": "^7.5.2",
		"node-sass": "^4.14.1",
		"normalize.css": "^8.0.1",
		"plist": "^3.0.1",
		"prop-types": "^15.7.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-redux": "^7.2.2",
		"react-scripts": "^4.0.1",
		"redux-watch": "^1.2.0",
		"seedrandom": "^3.0.5",
		"tabulator-tables": "^4.9.3"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
