{
	"name": "Musicbox",
	"version": "1.0.0",
	"description": "A music library organizer and player.",
	"homepage": "./",
	"license": "GPL-3.0-only",
	"type": "module",
	"author": {
		"name": "Jenny Belanger",
		"email": "mail@jennybelanger.com",
		"url": "https://www.jennybelanger.com/"
	},
	"main": "electron.cjs",
	"repository": {
		"type": "git",
		"url": "https://github.com/jlbelanger/musicbox.git"
	},
	"scripts": {
		"start": "npx update-browserslist-db && concurrently \"npm run start:react\" \"wait-on http://127.0.0.1:3000 -l && npm run start:electron\"",
		"start:electron": "npx electron .",
		"start:react": "vite --host 127.0.0.1",
		"build": "vite build",
		"dist": "electron-builder",
		"lint": "npm run lint:css && npm run lint:js && npm run lint:prettier",
		"lint:css": "npx stylelint 'src/css/**/*.css'",
		"lint:js": "npx eslint .",
		"lint:prettier": "npx prettier . --check",
		"predist": "npm run build",
		"test:js": "npx jest",
		"test:cypress": "npx cypress open",
		"test:watch": "npx jest --watch"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^2.11.2",
		"@vitejs/plugin-react": "^5.1.2",
		"dateformat": "^5.0.3",
		"jest": "^30.2.0",
		"luxon": "^3.7.2",
		"md5": "^2.3.0",
		"music-metadata": "^11.10.3",
		"normalize.css": "^8.0.1",
		"plist": "^3.1.0",
		"prop-types": "^15.8.1",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-redux": "^9.2.0",
		"redux-watch": "^1.2.0",
		"seedrandom": "^3.0.5",
		"tabulator-tables": "^6.3.1",
		"vite": "^7.3.0",
		"vite-plugin-svgr": "^4.5.0"
	},
	"devDependencies": {
		"@babel/plugin-transform-modules-commonjs": "^7.27.1",
		"@eslint/js": "^9.39.2",
		"@stylistic/eslint-plugin": "^5.6.1",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"concurrently": "^9.2.1",
		"cypress": "^15.8.1",
		"electron": "^39.2.7",
		"electron-builder": "^26.6.0",
		"eslint": "^9.39.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"globals": "^16.5.0",
		"jest-environment-jsdom": "^30.2.0",
		"prettier": "^3.7.4",
		"stylelint": "^16.26.1",
		"stylelint-config-standard": "^39.0.1",
		"stylelint-order": "^7.0.0",
		"wait-on": "^9.0.3"
	},
	"build": {
		"appId": "com.jennybelanger.musicbox",
		"files": [
			"build",
			"*.cjs"
		],
		"mac": {
			"category": "public.app-category.music"
		}
	},
	"browserslist": [
		"defaults",
		"iOS >= 12"
	]
}
